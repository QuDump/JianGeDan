<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:text="袜子@无厘头"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/tv_info"
                android:singleLine="true"
                android:text="两个小时前"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="14sp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="来讲一个笑话来讲一个笑话来讲一个笑话来讲一个笑话来讲一个笑话来讲一个笑话来讲一个笑话来讲一个笑话来讲一个笑话"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/ll_attitude"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_like"
                    android:layout_toLeftOf="@+id/rl_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:singleLine="true"
                        android:text="OO"
                        android:textColor="@color/secondary_text_default_material_light"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:layout_toRightOf="@id/tv_like"
                        android:text="16"
                        android:textColor="@color/secondary_text_default_material_light"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:id="@+id/rl_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_dislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:singleLine="true"
                        android:text="XX"
                        android:textColor="@color/secondary_text_default_material_light"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_dislike_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:layout_toRightOf="@id/tv_dislike"
                        android:text="16"
                        android:textColor="@color/secondary_text_default_material_light"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ll_attitude"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:text="14"
                android:textSize="14sp"
                android:textColor="@color/secondary_text_default_material_light"
                android:drawableLeft="@mipmap/ic_comments"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:text="分享"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>