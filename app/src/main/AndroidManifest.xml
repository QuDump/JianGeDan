<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qudump.jiangedan">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.RxBusTestActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.PostDetailActivity"
            android:theme="@style/PostDetailActivityTheme"/>

        <activity
            android:name=".ui.PicViewerActivity"
            android:theme="@style/PostDetailActivityTheme"/>
        <activity
            android:name=".ui.CommentListActivity"
            android:theme="@style/PostDetailActivityTheme"/>
    </application>

</manifest>